{
  "name": "node-red-contrib-multi-action-switch",
  "version": "0.0.4",
  "description": "A custom Node-RED node for handling multi-click, longpress, press and release events for SmartHome systems.",
  "author": "Łukasz Dańko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ldanko/node-red-contrib-multi-action-switch/issues"
  },
  "engines": {
    "node": ">=18.5"
  },
  "node-red": {
    "version": ">=4.0.0",
    "nodes": {
      "multi-action-switch": "nodes/multi-action-switch.js"
    }
  },
  "keywords": [
    "node-red",
    "smarthome",
    "switch",
    "multi-click",
    "longpress",
    "multi-action"
  ],
  "scripts": {
    "test": "nyc mocha",
    "lint": "eslint nodes/"
  },
  "devDependencies": {
    "eslint": "^9.20.1",
    "mocha": "^11.1.0",
    "node-red": "^4.0.9",
    "node-red-node-test-helper": "^0.3.4",
    "nyc": "^17.1.0",
    "should": "^13.2.3"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "all": true,
    "include": [
      "nodes/**/*.js"
    ],
    "exclude": [
      "test/**/*.js"
    ]
  }
}
